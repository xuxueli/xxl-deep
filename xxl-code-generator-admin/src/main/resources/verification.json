[
  {
    "rule": "empty",
    "name": "空",
    "type": "normal",
    "errorInfo": "不能为空"
  },
  {
    "rule": "min",
    "name": "最小值",
    "type": "normal",
    "errorInfo": "最小值必须小于"
  },
  {
    "rule": "max",
    "name": "最大值",
    "type": "normal",
    "errorInfo": "最大值必须大于"
  },
  {
    "rule": "email",
    "name": "邮箱",
    "type": "regex",
    "errorInfo": "邮箱格式不正确",
    "regex": "^([\\w-\\.]+)@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.)|(([\\w-]+\\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\\]?)$"
  },
  {
    "rule": "mobile",
    "name": "手机号",
    "type": "regex",
    "errorInfo": "手机号码格式不正确",
    "regex": "^[1]+[3,5]+\\d{9}$"
  },
  {
    "rule": "tel",
    "name": "电话号码",
    "type": "regex",
    "errorInfo": "电话号码格式不正确",
    "regex": "^(\\d{3,4}-)?\\d{6,8}$"
  },
  {
    "rule": "postcode",
    "name": "邮政编码",
    "type": "regex",
    "errorInfo": "邮政编码格式不正确",
    "regex": "^\\d{6}$"
  },
  {
    "rule": "idcard",
    "name": "身份证",
    "type": "regex",
    "errorInfo": "身份证格式不正确",
    "regex": "(^\\d{18}$)|(^\\d{15}$)"
  },
  {
    "rule": "url",
    "name": "链接地址",
    "type": "regex",
    "errorInfo": "URL格式不正确",
    "regex": "http(s)?://([\\w-]+\\.)+[\\w-]+(/[\\w- ./?%&=]*)?"
  },
  {
    "rule": "ip",
    "name": "IP地址",
    "type": "regex",
    "errorInfo": "IP地址格式不正确",
    "regex": "^((\\d|[1-9]\\d|1\\d\\d|2[0-4]\\d|25[0-5]|[*])\\.){3}(\\d|[1-9]\\d|1\\d\\d|2[0-4]\\d|25[0-5]|[*])$"
  },
  {
    "rule": "mac",
    "name": "MAC地址",
    "type": "regex",
    "errorInfo": "MAC地址格式不正确",
    "regex": "^[A-F0-9]{2}(-[A-F0-9]{2}){5}$"
  },
  {
    "rule": "decimal",
    "name": "金额",
    "type": "regex",
    "errorInfo": "金额格式不正确，保留2位小数",
    "regex": "^[0-9]+(.[0-9]{2})?$"
  },
  {
    "rule": "number",
    "name": "数字",
    "type": "regex",
    "errorInfo": "请填写正确的数字",
    "regex": "^[0-9]*$"
  },
  {
    "rule": "positiveInt",
    "name": "正整数",
    "type": "regex",
    "errorInfo": "格式不正确，请填写正确的正整数",
    "regex": "^\\+?[1-9][0-9]*$"
  }
]
